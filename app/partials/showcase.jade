mixin carousel(name, images)
	div.carousel.slide(id="carousel" + name, data-interval="false")
		//- Slides
		div.carousel-inner
			-var additionalClass = " active"
			-each image, i in images
				div(class="item" + additionalClass)
					if images[i].image
						a.fullsize(href=images[i].image)
							img(src=images[i].thumbnail, alt=name + " " + (i+1) )
					else
						a(href="#carousel" + name, data-slide="next")
							img(src=images[i].thumbnail, alt=name + " " + (i+1) )
				-additionalClass = ""

		//- Controls
		a.left.carousel-control(href="#carousel" + name, data-slide="prev")
			span.fa.fa-angle-left
		a.right.carousel-control(href="#carousel" + name, data-slide="next")
			span.fa.fa-angle-right

		//- Indicators
		ol.carousel-indicators
			-var additionalClass = " active"
			-each image, i in images
				li(class=additionalClass, data-target="#carousel" + name, data-slide-to=i)
				-additionalClass = ""


